    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach to Chrome",
            "port": 4200,
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}/index.html"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Open a specific file",
            "file": "${workspaceFolder}/index.html"
        }
    ]
}